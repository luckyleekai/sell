// 一像素边框的实现
border-1px-top($color)
  position: relative
  &:before
    content: ' '
    position: absolute
    left: 0
    top: 0
    width: 100%
    border-top: 1px solid $color
border-1px-bottom($color)
  position: relative
  &:after
    content: ' '
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-bottom: 1px solid $color

border-none()
  &:after
    border: none
    
