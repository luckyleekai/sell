// 一像素边框的实现
border-1px($color)
  position: relative
  &:after
    position: absolute
    left: 0
    bottom: 0
    display: block
    width: 100%
    border-top: 1px solid $color
    content: ' '
    
// 2x/3x图处理 $url 图片的url地址，$ext哪张类型的图片
bg-image($url, $ext)
  background-image: url($url + '@2x.' + $ext)
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image: url($url + '@2x.' + $ext)
  
  
    
  